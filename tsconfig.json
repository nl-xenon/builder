{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ESNext",                          
    "lib": ["ES2020", "DOM"],                    
    "moduleResolution": "node",                  
    "rootDir": "./src",                          
    "outDir": "./dist",                          
    "strict": true,                              
    "esModuleInterop": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,    
    "declaration": true,                         
    "declarationDir": "./types",                 
    "sourceMap": true,                           
    "resolveJsonModule": true                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
